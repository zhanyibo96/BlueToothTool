.slides{
	height: 380rpx;
}
.slides image{
	width: 100%;
	height: 100%;
}

.top-view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 25rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.top-view text{
  color: #888888;
  text-align: center;
}
.title{
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
  
}
.title text{
  background-color: #14446A;
  color: white;
  font-size: 30rpx;
  font-weight: 700;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 250rpx;
  margin-right: 250rpx;
  /* border: 8rpx double greenyellow; */
}
.article{
  height: auto;
  width: 650rpx;
  padding-right: 15rpx;
  padding-left: 15rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin: 0 auto;
  margin-bottom: 60rpx;
}
.image{
  display: flex;
  flex-direction: column;
  height: 350rpx;
}
.image image{
  width: 70%;
  height: 350rpx;
  margin: 0 auto;

}
