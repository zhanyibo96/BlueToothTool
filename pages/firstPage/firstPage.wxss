/* pages/firstPage.wxss */
page{
  background-color: #fff;
}
.slides{
	height: 380rpx;
}
.slides image{
	width: 100%;
	height: 100%;
}
.maintext{
  display: flex;
	align-items: center;
	margin: 20rpx;
	padding: 20rpx;
	border: 1rpx solid #e0e0e0;
	border-radius: 5rpx;
	box-shadow: 0 0 5rpx #e0e0e0;
}
.top-view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 28rpx;
  margin-top: 20rpx;
}
.top-view text{
  color: #888888;
  text-align: center;
}
.grids{
	display: flex;
	flex-wrap: wrap;
	font-size: 28rpx;
  
}
.grids .item{
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	width: 250rpx;
	height: 250rpx;
  /* background-color: #fff;
	border:1rpx solid #eee;
	box-sizing: border-box; */
}
.grids .item image{
	height: 70rpx;
	width: 70rpx;
}
.grids .item text{
	margin-top: 20rpx;
	display: block;
  font-weight: 600;
}